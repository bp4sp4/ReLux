<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
 
<mapper namespace="com.luxre.relux.user.repository.UserRepository">
 
  <insert id="insertUser" parameterType="map">
    INSERT INTO
        `user`
        (
            `loginId`,
            `password`,
            `name`,
            `email`
        )
    VALUES
        (
            #{loginId},
            #{password},
            #{name},
            #{email}
        )
  </insert>
  
  <select id="selectCountByLoginId" parameterType="String" resultType="int">
  	SELECT
  		count(*)
  	FROM
  		`user`
  	WHERE
  		`loginId` = #{loginId}
</select>

<select id="selectUser" parameterType="map" resultType="com.luxre.relux.user.domain.User">
    SELECT
        `id`,
        `loginId`,
        `password`,
        `name`,
        `email`,
        `createdAt`,
        `updatedAt`
    FROM
        `user`
    WHERE
        `loginId` = #{loginId}
        AND `password` = #{password}
</select>


<select id="selectUserById" parameterType="int" resultType="com.luxre.relux.user.domain.User">
 SELECT
        `id`,
        `loginId`,
        `password`,
        `name`,
        `email`,
        `createdAt`,
        `updatedAt`
    FROM
        `user`
    WHERE
        `id` = #{id}
</select>
  
</mapper>
